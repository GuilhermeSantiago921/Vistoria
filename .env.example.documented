# Exemplo de Arquivo .env
# Copie este arquivo para .env e ajuste os valores conforme seu ambiente

################################################################################
# CONFIGURAÇÕES BÁSICAS DA APLICAÇÃO
################################################################################

APP_NAME=Vistoria
APP_ENV=production
APP_KEY=base64:sua_chave_aqui_sera_gerada_automaticamente
APP_DEBUG=false
APP_URL=https://seu-dominio.com.br

################################################################################
# LOGS
################################################################################

LOG_CHANNEL=stack
LOG_LEVEL=error

################################################################################
# BANCO DE DADOS - MYSQL (PADRÃO)
################################################################################

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=vistoria
DB_USERNAME=vistoria_user
DB_PASSWORD=sua_senha_muito_segura_aqui
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

################################################################################
# BANCO DE DADOS - POSTGRESQL (ALTERNATIVA)
################################################################################
# Descomente para usar PostgreSQL em vez de MySQL

# DB_CONNECTION=pgsql
# DB_HOST=127.0.0.1
# DB_PORT=5432
# DB_DATABASE=vistoria
# DB_USERNAME=vistoria_user
# DB_PASSWORD=sua_senha_muito_segura_aqui
# DB_SSLMODE=prefer

################################################################################
# BANCO DE DADOS - SQL SERVER (ALTERNATIVA)
################################################################################
# Descomente para usar SQL Server em vez de MySQL

# DB_CONNECTION=sqlsrv
# DB_HOST=seu-servidor-sqlserver.com,1433
# DB_PORT=1433
# DB_DATABASE=vistoria
# DB_USERNAME=sa
# DB_PASSWORD=sua_senha_sqlserver

################################################################################
# CACHE
################################################################################

CACHE_DRIVER=file
CACHE_STORE=file

################################################################################
# SESSÃO
################################################################################

SESSION_DRIVER=file
SESSION_LIFETIME=120

################################################################################
# FILA (QUEUE)
################################################################################

QUEUE_CONNECTION=sync
# Para usar redis: QUEUE_CONNECTION=redis
# Para usar database: QUEUE_CONNECTION=database

################################################################################
# REDIS (Opcional - Para cache e fila em produção)
################################################################################

# REDIS_HOST=127.0.0.1
# REDIS_PASSWORD=null
# REDIS_PORT=6379

################################################################################
# EMAIL / SMTP
################################################################################

MAIL_MAILER=smtp
MAIL_HOST=smtp.seu-provedor.com
MAIL_PORT=587
MAIL_USERNAME=seu-email@seu-dominio.com
MAIL_PASSWORD=sua_senha_email
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@seu-dominio.com
MAIL_FROM_NAME="${APP_NAME}"

# Para usar Mailgun (alternativa)
# MAIL_MAILER=mailgun
# MAILGUN_SECRET=sua-chave-mailgun
# MAILGUN_DOMAIN=seu-dominio.mailgun.org

################################################################################
# AWS S3 (Opcional - Para armazenar uploads)
################################################################################

# AWS_ACCESS_KEY_ID=sua_chave
# AWS_SECRET_ACCESS_KEY=sua_chave_secreta
# AWS_DEFAULT_REGION=us-east-1
# AWS_BUCKET=seu-bucket
# AWS_URL=https://seu-bucket.s3.amazonaws.com

################################################################################
# VARIÁVEIS CUSTOMIZADAS DO PROJETO
################################################################################

# Adicione aqui variáveis específicas do seu projeto
# Por exemplo:

VISTORIA_FEATURE_X=true
VISTORIA_API_TIMEOUT=30
VISTORIA_MAX_UPLOAD_SIZE=50

